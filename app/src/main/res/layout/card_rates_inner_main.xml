<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/item_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:minHeight="55dp">

        <TextView
            android:id="@+id/card_rates_currency"
            android:textColor="#ABABAB"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:text="Bitcoin"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/card_rates_amount"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="43.12"
            android:layout_centerInParent="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <ImageView
            android:id="@+id/card_rates_item_icon"
            android:layout_width="24dp"
            tools:background="@android:drawable/ic_menu_info_details"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/card_rates_currency"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/card_rates_units"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="43.12"
            android:layout_centerInParent="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>

</LinearLayout>